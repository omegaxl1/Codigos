<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.EstiloBoton1" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary2</item>


    </style>

    <style name="AppTheme.EstiloBoton2" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary3</item>
    </style>

    <style name="AppTheme.EstiloBoton3" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary4</item>
    </style>

    <style name="AppTheme.EstiloBoton4" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary5</item>
    </style>



    <style name="MiEstilo" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">264dp</item>
        <item name="tabIndicatorColor">@color/colorLime</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhiteSemiTransparent</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
